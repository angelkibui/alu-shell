#!/usr/bin/env bash
# This script loops from 1 to 10 and:
# - Displays "bad luck" for the 4th iteration
# - Displays "good luck" for the 8th iteration
# - Displays "Best School" for all other iterations

count=1

# Loop while the count is less than or equal to 10
while [ "$count" -le 10 ]
do
  if [ "$count" -eq 4 ]  
  then
	  echo "bad luck"
  elif [ "$count" -eq 8 ]  
  then
    echo "good luck"
  else
    echo "Best School"
  fi
  count=$((count + 1))  
done
