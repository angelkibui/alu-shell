#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely with a 2-second delay.
# It prints "I am invincible!!!" when receiving a SIGTERM signal.

# Trap SIGTERM and print "I am invincible!!!"
trap 'echo "I am invincible!!!"' SIGTERM

# Infinite loop
while true; do
  echo "To infinity and beyond"
  sleep 2
done
